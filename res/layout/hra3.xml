<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_game_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242" >

    <TextView
        android:id="@+id/zadanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bity"
        android:layout_alignRight="@+id/bity"
        android:text="1/10"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zadanie"
        android:layout_alignLeft="@+id/bity"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="231dp"
        android:layout_marginRight="176dp"
        android:layout_toLeftOf="@+id/zadanie"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/odpovedTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/odpoved"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/odpoved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/wrong" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_nie"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="111dp"
        android:background="@drawable/btn_nie" />

    <ImageButton
        android:id="@+id/stvorec"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:background="@drawable/btn_ano" />

    <GridLayout
        android:id="@+id/bity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="6"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bit16"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:src="@drawable/b0" />

        <ImageView
            android:id="@+id/bit8"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:src="@drawable/b0" />

        <ImageView
            android:id="@+id/bit4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:src="@drawable/b0" />

        <ImageView
            android:id="@+id/bit2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:cropToPadding="true"
            android:src="@drawable/b0" />

        <ImageView
            android:id="@+id/bit1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:src="@drawable/b0" />

    </GridLayout>

    <TextView
        android:id="@+id/cislo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stvorec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:background="#FF8F00"
        android:text="-"
        android:textColor="#FFFFFF"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stvorec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="="
        android:textColor="#FFFFFF"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_nie"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/info" />

    <ImageView
        android:id="@+id/zvukIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/info"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/info"
        android:src="@drawable/sound_on" />

    <TextView
        android:id="@+id/cas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bity"
        android:layout_below="@+id/RelativeLayout1"
        android:text="10 sekÃºnd"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

</RelativeLayout>