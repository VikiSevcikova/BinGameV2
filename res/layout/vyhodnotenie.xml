<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vbg" >

    <Button
        android:id="@+id/menu"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:background="@drawable/button"
        android:onClick="spatMenu"
        android:text="Späť do menu"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/repeat"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/button"
        android:onClick="opakujHru"
        android:text="Opakuj"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/nespravne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Počet nesprávnych odpovedí:"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/spravne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nespravne"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Počet správnych odpovedí:"
        android:textColor="#ffffff"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nespravne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Celkový čas:"
        android:textColor="#ffffff"
        android:textSize="40dp" />

</RelativeLayout>